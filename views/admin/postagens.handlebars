<h2>Lista de postagens</h2>
<a href="/admin/postagens/add"><button class="btn btn-success mt-4">Nova postagem</button></a>
<hr>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{id}}"><button type="submit" class="btn btn-success mt-3">Editar postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}
